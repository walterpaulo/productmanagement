<p id="notice"><%= notice %></p>

<h1>Products</h1>
<%= link_to 'New Product', new_product_path, class: "btn btn-primary" %>
<hr>
<table class = "table table-bordered table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Quantity</th>
      <th>Purchase price</th>
      <th>Sale price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.quantity %></td>
        <td><%= product.purchase_price %></td>
        <td><%= product.sale_price %></td>
        <td><%= link_to 'Show', product, class: "btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_product_path(product), class: "btn btn-warning" %></td>
        <td><%= link_to 'Destroy', product, method: :delete, class: "btn btn-danger" ,data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>