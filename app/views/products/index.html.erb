<div class="row">
  <p id="notice"><%= notice %></p>
  <div class="col">
    <%= link_to 'New Product', new_product_path, class: "btn btn-primary" %>
    <hr>
  </div>
</div>
</div>
<div class="row">  
    <table class = "table table-bordered table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Quantity</th>
          <th>Purchase price</th>
          <th>Sale price</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @products.each do |product| %>
          <tr>
            <td><%= product.name %></td>
            <td><%= product.quantity %></td>
            <td><%= product.purchase_price %></td>
            <td><%= product.sale_price %></td>
            <td><%= link_to 'Show', product, class: "btn btn-primary" %></td>
            <td><%= link_to 'Edit', edit_product_path(product), class: "btn btn-warning" %></td>
            <td><%= link_to 'Destroy', product, method: :delete, class: "btn btn-danger" ,data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>
<div class="row align-items-center">
  <div class="col">
  </div>
  <div class="col">
    <%= will_paginate @products %>
  </div>
  <div class="col">
  </div>
</div>
<br>