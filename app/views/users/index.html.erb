<div class="row">
  <p id="notice"><%= notice %></p>
  <div class="col">
    <%= link_to 'New User', new_user_path, class: "btn btn-primary" %>
    <hr>
  </div>
</div>
<div class="row">  
  <table class = "table table-bordered table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Password</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.password_digest %></td>
          <td><%= link_to 'Show', user, class: "btn btn-primary" %></td>
          <td><%= link_to 'Edit', edit_user_path(user), class: "btn btn-warning" %></td>
          <td><%= link_to 'Destroy', user, method: :delete, class: "btn btn-danger",
              data: {controller: 'sweetalert',
                     action: 'click->sweetalert#showAlert',
                     sweetalert_title_value: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<div class="row align-items-center">
  <div class="col">
  </div>
  <div class="col">
    <%= will_paginate @users %>
  </div>
  <div class="col">
  </div>
</div>
<br>
