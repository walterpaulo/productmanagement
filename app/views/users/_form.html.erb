  <div class="col-sm-2 col-form-label">
    <%= form.label :email %>
  </div>
  <div class="col-sm-10">
    <%= form.text_field :email %>
  </div>
</div>
<div class="mb-3 row" >
  <div class="col-sm-2 col-form-label">
    <%= form.label :password %>
  </div>
